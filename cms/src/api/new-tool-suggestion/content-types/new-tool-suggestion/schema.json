{
  "kind": "collectionType",
  "collectionName": "new_tool_suggestions",
  "info": {
    "singularName": "new-tool-suggestion",
    "pluralName": "new-tool-suggestions",
    "displayName": "New Tool Suggestion"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "link": {
      "type": "string",
      "required": true
    },
    "other_tools_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::other-tools-category.other-tools-category"
    },
    "review_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "declined"
      ],
      "required": true,
      "default": "pending"
    }
  }
}
